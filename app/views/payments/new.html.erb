
<div class= "container" style="min-height: 525px">
    <div class="col-xs-8 col-sm-8">
      <h1> </h1>
      <h1> </h1>

      <div class = "well">
          <h1>Booking a Creative Escape <%= @booking.sku %></h1>
          <%= form_tag booking_payments_path(@booking) do %>
            <article>
              <label class="amount">
                <span>Amount: <%= humanized_money_with_symbol(@booking.amount) %></span>
              </label>
            </article>

            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-name="My Creative Escape"
              data-email="<%= current_user.email %>"
              data-description="CreativeEscape <%= @booking.sku %>"
              data-amount="<%= @booking.amount_cents %>"
              data-currency="<%= @booking.amount.currency %>"></script>

            <% end %>
        </div>
    </div>
</div>
